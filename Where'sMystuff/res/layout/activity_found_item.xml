<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/city_locationf"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_found"
        android:layout_below="@+id/date_pickerf"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter City"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submit_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancel_foundItem"
        android:layout_alignBottom="@+id/cancel_foundItem"
        android:layout_alignLeft="@+id/city_locationf"
        android:layout_alignRight="@+id/city_locationf"
        android:onClick="submitItem"
        android:text="Submit" />

    <EditText
        android:id="@+id/item_namef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lf_title"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/item_descriptionf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_namef"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/item_rewardf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_descriptionf"
        android:ems="10"
        android:hint="Reward"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/category_selectorf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_rewardf"
        android:layout_toRightOf="@+id/category_labelf"
        android:entries="@array/categories"
        android:prompt="@string/category_prompt"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/category_labelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/category_selectorf"
        android:text="Category:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/date_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date_pickerf"
        android:layout_alignBottom="@+id/date_pickerf"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:text="Date Found"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/state_locationf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/city_locationf"
        android:layout_alignBottom="@+id/city_locationf"
        android:layout_alignLeft="@+id/cancel_foundItem"
        android:ems="10"
        android:hint="Enter State"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/cancel_foundItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/city_locationf"
        android:layout_toRightOf="@+id/submit_found"
        android:onClick="goToAllFoundItems"
        android:text="Cancel" />

    <TextView
        android:id="@+id/lf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="New Found Item"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/date_pickerf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/category_selectorf"
        android:layout_below="@+id/category_selectorf"
        android:onClick="showDatePickerDialog"
        android:text=" Date Found" />

</RelativeLayout>