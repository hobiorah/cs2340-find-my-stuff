<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LostItem" >

    <Button
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date_lost"
        android:layout_alignBottom="@+id/date_lost"
        android:layout_toRightOf="@+id/category_label"
        android:onClick="showDatePickerDialog"
        android:text=" Date Lost" />

    <TextView
        android:id="@+id/date_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/category_label"
        android:layout_below="@+id/category_selector"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/date_picker"
        android:ems="10"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/submit_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city_location"
        android:layout_alignRight="@+id/city_location"
        android:layout_below="@+id/city_location"
        android:layout_marginTop="19dp"
        android:onClick="submitItem"
        android:text="Submit" />

    <Button
        android:id="@+id/cancel_lostItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/submit_lost"
        android:layout_alignBottom="@+id/submit_lost"
        android:layout_alignLeft="@+id/state_location"
        android:layout_alignRight="@+id/state_location"
        android:onClick="goToAllLostItems"
        android:text="Cancel" />

    <EditText
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lost_activity_title"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lost_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/category_label"
        android:text="New Lost Item"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <EditText
        android:id="@+id/city_location"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_lost"
        android:layout_below="@+id/date_picker"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter City"
        android:inputType="textPersonName" />
    
    <EditText
        android:id="@+id/state_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/city_location"
        android:layout_alignBottom="@+id/city_location"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/city_location"
        android:ems="10"
        android:hint="Enter State"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_name"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/item_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_description"
        android:ems="10"
        android:hint="Reward"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/category_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_picker"
        android:layout_alignRight="@+id/item_reward"
        android:layout_below="@+id/item_reward"
        android:layout_marginTop="18dp"
        android:entries="@array/categories"
        android:prompt="@string/category_prompt"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_reward"
        android:layout_alignTop="@+id/category_selector"
        android:text="Category:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>